            body {
                margin: 0;
                padding: 0;
                /* overflow: hidden; */
                font-family: 'Arial', sans-serif;
                background-color: #f2f2f2;
            }
    
            #container {
                display: flex;
                position: fixed;
                top: 50%;
                left: -100%;
                transform: translate(-50%, -50%);
                transition: left 0.5s ease;
            }
    
            #bottomContainer {
                display: none;
                position: fixed;
                bottom: 1in;
                left: 0;
                width: calc(100% - 2in);
                height: 1in;
                background-color: rgb(170,253,53);
                justify-content: center;
                align-items: center;
                z-index: 1;
                border-radius: 10px;
            }
    
            #successContainer {
                display: none;
                position: fixed;
                top: 10%;
                left: 10%;
                width: 75%;
                height: 75%;
                background-color:rgb(170,253,53);
                justify-content: space-around;
                align-items: center;
                z-index: 2;
                animation: slide 2s ease-in-out;
                border-radius: 20px;
            }
    
            @keyframes slide {
                from {
                    transform: translate(-100%, 100%);
                }
                to {
                    transform: translate(0, 0);
                }
            }
    
            #innerBox {
                background-color: white;
                padding: 30px;
                text-align: center;
                border-radius: 15px;
                box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
                position: relative;
                width: 25rem;

            }
    
            #userInfoContainer {
                color: #fff;
                font-weight: bold;
            }
    
            #userInfoContainer span {
                margin-bottom: 10px;
                display: block;
            }
    
            #bmiContainer {
                background-color: white;
                padding: 20px;
                border-radius: 15px;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
                margin-top: 20px;
            }
    
            #messageContainer, #caloriesContainer {
                color: #fff;
                font-weight: bold;
                text-align: left;
                font-size: 2.5rem; /* Adjust font size as needed */
                margin-top: 10px; /* Added margin between the items */
                display: block; /* Display each item on a new line */
            }
    
            #submitButton {
                background-color: rgb(170,253,53);
                color: white;
                padding: 10px 20px;
                font-size: 16px;
                cursor: pointer;
                border: none;
                border-radius: 5px;
                margin-top: 20px;
            }
    
            #formContainer {
                display: flex;
                flex-direction: column;
                gap: 15px;
            }
    
            label {
                font-weight: bold;
                color: rgb(170,253,53);
                font-size: 16px;
            }
    
            input, select, textarea {
                width: 100%;
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 5px;
                font-size: 14px;
            }
    
            select {
                appearance: none;
            }
    
            #startButton {
                background-color:rgb(170,253,53)1;
                color: white;
                padding: 15px 30px;
                font-size: 18px;
                cursor: pointer;
                border: none;
                border-radius: 10px;
            }
    
            h2 {
                color: rgb(170,253,53);
                margin-bottom: 20px;
                font-size: 24px;
            }
    
            #closeButton {
                position: absolute;
                top: 10px;
                right: 10px;
                font-size: 20px;
                cursor: pointer;
                color: #e74c3c;
            }
    
            @keyframes slideOut {
            from {
                transform: translate(0, 0);
            }
            to {
                transform: translate(100%, -100%);
            }
        }

        ::placeholder {
