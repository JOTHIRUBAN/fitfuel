    <script src="assets/js/main.js"></script>
    <script>
        function toggleBox() {
            const container = document.getElementById("container");
            const isHidden = container.style.left === "-100%";
    
            if (isHidden) {
                container.style.left = "50%";
            } else {
                container.style.left = "-100%";
            }
        }
    
        function submitForm() {
            const weight = document.getElementById("weight").value;
            const height = document.getElementById("height").value;
    
            if (weight.trim() === "" || height.trim() === "") {
                alert("Please fill in all fields.");
                return false;
            }
    
            if (isNaN(weight) || isNaN(height) || weight <= 0 || height <= 0) {
                alert("Please enter valid weight and height.");
                return false;
            }
    
            toggleBox();
            return false;
        }
    
        function showSuccessContainer() {
            const container = document.getElementById("container");
            const successContainer = document.getElementById("successContainer");
    
            container.style.left = "-100%";
            successContainer.style.display = "flex";
        }
    
    
        function closeSuccessContainer() {
            const successContainer = document.getElementById("successContainer");
            successContainer.style.animation = "slideOut 2s ease-in-out";
            setTimeout(() => {
                successContainer.style.display = "none";
                successContainer.style.animation = ""; // Reset animation
            }, 2000);
        }
    
        
    
    </script>
